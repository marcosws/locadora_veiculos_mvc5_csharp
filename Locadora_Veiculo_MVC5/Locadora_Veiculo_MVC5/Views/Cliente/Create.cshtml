@model Locadora_Veiculo_MVC5.Cliente

@{
    ViewBag.Title = "Incluir";
}

<h2>Incluir</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Cliente</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.NomeCliente, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NomeCliente)
                @Html.ValidationMessageFor(model => model.NomeCliente)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EmailCliente, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EmailCliente)
                @Html.ValidationMessageFor(model => model.EmailCliente)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CpfCliente, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CpfCliente)
                @Html.ValidationMessageFor(model => model.CpfCliente)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataCadastro, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataCadastro)
                @Html.ValidationMessageFor(model => model.DataCadastro)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Incluir" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volta para Lista", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/methods_pt.js"></script>

